<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300"
		xmlns:components="com.adams.scrum.views.components.*"> 
	<fx:Metadata>
		[HostComponent('com.adams.scrum.views.mediators.ThemeViewMediator')]
	</fx:Metadata>  
	<s:Group right="0" id="domainCreationPanel"  left="0" top="0" bottom="0" >
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="#000000" alpha=".7" />
			</s:fill>
		</s:Rect>
		<s:Panel title="Theme Form" horizontalCenter="0" verticalCenter="0" >
			<mx:Form id="themeForm"  verticalCenter="0" horizontalCenter="0">
				<mx:FormItem width="100%" label="Theme Name" >
					<s:TextInput id="themeLbl" />
				</mx:FormItem> 
			</mx:Form>
			<s:controlBarContent>
				<components:NativeButton id="domCreateBtn" label="Add New" styleName="OkIcon"/>
				<components:NativeButton id="domEditBtn" label="Edit" styleName="EditIcon"/>
				<components:NativeButton id="domCancelBtn" label="Cancel" styleName="CancelIcon" />
			</s:controlBarContent>
		</s:Panel>
	</s:Group>	
</s:Skin>
