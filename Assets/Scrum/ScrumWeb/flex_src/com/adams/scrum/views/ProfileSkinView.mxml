<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"  
		xmlns:components="com.adams.scrum.views.components.*"> 
	<fx:Metadata>
		[HostComponent('com.adams.scrum.views.mediators.ProfileViewMediator')]
	</fx:Metadata>  
	<s:Group right="0" left="0" top="0" bottom="0" >
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="#000000" alpha=".7" />
			</s:fill>
		</s:Rect>
		<s:Panel title="Profile Form" id="formTitle" horizontalCenter="0" verticalCenter="0" >
			<mx:Form id="profileForm"  verticalCenter="0" horizontalCenter="0">
				<mx:FormItem width="100%" label="Profile Label">
					<s:TextInput id="profileLabel"/>
				</mx:FormItem>
				<mx:FormItem width="100%" label="Profile Code">
					<s:TextInput id="profileCode"/>
				</mx:FormItem>
				</mx:Form>
			<s:controlBarContent>
				<components:NativeButton id="profileEditBtn" label="Edit"/>
				<components:NativeButton id="profileCancelBtn" label="Cancel" styleName="CancelIcon" /> 
			</s:controlBarContent>
		</s:Panel>
	</s:Group>	
</s:Skin>
