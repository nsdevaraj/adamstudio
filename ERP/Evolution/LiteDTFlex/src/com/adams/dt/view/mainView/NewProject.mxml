					}	
					
					var sort : Sort = new Sort();
					sort.fields = [ new SortField( "workflowLabel" ) ];
					wrflwColl.sort = sort;
					wrflwColl.refresh();
				}
				model.workflowsCollection.filterFunction = null;
				model.workflowsCollection.refresh();
				return wrflwColl;
			} 
			
