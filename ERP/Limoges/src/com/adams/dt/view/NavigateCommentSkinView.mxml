<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mediators="com.adams.dt.view.mediators.*" 
		xmlns:components="com.adams.swizdao.views.components.*"
		xmlns:view="com.adams.dt.view.components.*">
	<s:Scroller width="100%" height="100%" >
		<s:Group >
			<s:Form id="navigateForm" width="100%" height="100%">				
				<s:FormItem label="Comments :" width="100%" height="120" required="true">	
					<view:TextEditor id="replyCommentsId" width="600" height="120"/>
				</s:FormItem>
				<s:FormItem label="File Upload :">
					<s:layout><s:HorizontalLayout /></s:layout>
					<s:Group id="fileTile" width="500" height="100" />
				</s:FormItem>
				<s:FormItem>
					<s:layout><s:HorizontalLayout /></s:layout>
					<components:NativeButton id="submitBtn" label="DONE"/>
					<components:NativeButton id="cancelBtn" label="CANCEL"/>
				</s:FormItem>
			</s:Form>
		</s:Group>
	</s:Scroller>
</s:Skin>